<head>
  <title> Topic show page</title>
  <style>
    .mainBanner {
        display: block-inline;
        margin-left: auto;
        margin-right: auto;
        width: 58%;
        height: 333px;
    }
    .mainTopics {
        display: block-inline;
        margin-left: auto;
        margin-right: auto;
        width: 22%;
    }
    .sideBanner {
        display: block-inline;
        width: 20%;
        height: 320px;
    }
    #postsSection {
        text-align: center;
    }

  </style>
</head>

<body>

<img src="/assets/5x5CSS.png" class="sideBanner">
<img src="/assets/calm.jpg" class="mainBanner"> 
<img src="/assets/5x5CSS.png" class="sideBanner"><br>


<div id="postsSection">
<h3>Create New Post</h3>

<%= form_for(@post) do |f| %>
  <label>url:</label><br>
  <%= f.text_field :url %><br>

  <label>note:</label><br>
  <%= f.text_field :note %><br><br>

  <%= f.submit %>
<% end %>

<h1><%= @topic.name %> posts: </h1>

<% if @topic.posts %>
  <% @topic.posts.each do |p| %>
      <a class="button" href=<%= p.url %>><%= p.note %></a><br>
  <% end %>
<% else %>
  <%= "No Posts!" %>
<% end %>

<br><br><a class="button" href="/">Home</a>

</div>
</body>