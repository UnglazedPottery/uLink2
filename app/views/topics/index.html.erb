<% if current_user %>
  Logged in as <%= current_user.username %>.
  <a href="/users/destroy">Logout</a>
<% else %>
  <a href="/users/new">Signup</a> or 
  <a href="/login">Login</a>
<% end %>

<h2>Topics</h2>

<% @topics.each do |topic| %>
    <a class="button" href="/topics/<%= topic.id %>"><%= topic.name %></a><br>
    <% if topic.image.attached? %>
      <a href="/topics/<%= topic.id %>"><img src="<%= (url_for(topic.image)) %>" class="sideBanner2"></a><br><br>
    <% end %>
<% end %>